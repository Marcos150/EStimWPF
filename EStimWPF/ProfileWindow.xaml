<Window x:Class="EStimWPF.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EStimWPF"
        mc:Ignorable="d"
        Title="ProfileWindow" Height="450" Width="800"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid>
        <Button x:Name="editProfile" Background="#283241" Foreground="White" Margin="625,117,0,0" VerticalAlignment="Top" Content="Editar Perfil"/>
        <Label Content="" Background="Black" HorizontalAlignment="Left" Margin="625,70,0,0" VerticalAlignment="Top" Width="119" Height="39"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="46,34,0,0" VerticalAlignment="Top" Width="100"/>
        <ListView d:ItemsSource="{d:SampleData ItemCount=6}" Margin="46,170,184,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Label" HorizontalAlignment="Left" Margin="184,34,0,0" VerticalAlignment="Top" Width="96"/>

    </Grid>
</Window>
