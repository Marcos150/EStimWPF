<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EStimWPF"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="EStimWPF.Busqueda"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Busqueda">
    <Grid>
        <ListView Name="listaJuegos" SelectionChanged="GoToGamePage" >
            <ListView.ItemTemplate>
                <DataTemplate >
                    <Border  BorderBrush="Black" BorderThickness="4">
                        <WrapPanel Background="Purple">
                            <Image Source="{Binding portadaSource}" Width="50" Height="50"/>
                            <TextBlock Text="{Binding nombre}" Margin="0,20,10,0"/>
                            <TextBlock Text="{Binding desarrollador}" Margin="0,20,10,0"/>
                            <TextBlock Text="{Binding editor}" Margin="0,20,10,0"/>
                        </WrapPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
